
  {% comment %}
    Icons
  {% endcomment %}
  
  <div class="icons icon--{{ section.id }}">

    
    <div class="icons__wrap">

      <div class="icons__wrap__heading">
        <h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
      </div> 

      <div class="icons__wrap__grid">
        
        {%- if section.settings.heading1 != blank -%}
          <div class="icons__wrap__grid__item">
            <div class="icons__wrap__grid__item__icon">
              <img loading="lazy" src="{{ section.settings.image1 | image_url: width: 200 }}" 
                alt="{{ section.settings.image1.alt | escape }}" width="200" height="200">
            </div>
            <h5 class="colour--green-light">{{ section.settings.heading1 | escape }}</h5>
            {{ section.settings.text1 }}
          </div>  
        {%- endif -%}

        {%- if section.settings.heading2 != blank -%}
          <div class="icons__wrap__grid__item">
            <div class="icons__wrap__grid__item__icon">
              <img loading="lazy" src="{{ section.settings.image2 | image_url: width: 200 }}" 
                alt="{{ section.settings.image2.alt | escape }}" width="200" height="200">
            </div>
            <h5 class="colour--green-light">{{ section.settings.heading2 | escape }}</h5>
            {{ section.settings.text2 }}
          </div>  
        {%- endif -%}

        {%- if section.settings.heading3 != blank -%}
          <div class="icons__wrap__grid__item">
            <div class="icons__wrap__grid__item__icon">
              <img loading="lazy" src="{{ section.settings.image3 | image_url: width: 200 }}" 
                alt="{{ section.settings.image3.alt | escape }}" width="200" height="200">
            </div>
            <h5 class="colour--green-light">{{ section.settings.heading3 | escape }}</h5>
            {{ section.settings.text3 }}
          </div>  
        {%- endif -%}

      </div>  

      {%- if section.settings.button_label != blank -%}
        <p class="text-center">
          <a href="{{ section.settings.button_link }}" class="button button--yellow">{{ section.settings.button_label }}</a>
        </p>
      {%- endif -%}

    </div>
  </div>
  

{% schema %}
{
  "name": "Icons",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Image with text",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        }
      ],
      "default": "h2",
      "label": "Heading size"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "heading1",
      "label": "Heading 1",
      "default": "Get prescription"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Text 1",
      "default": "<p>Get a prescription through your doctor or book an appointment with one of our doctors.</p>"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "heading2",
      "label": "Heading 2",
      "default": "Get prescription"
    },
    {
      "type": "richtext",
      "id": "text2",
      "label": "Text 2",
      "default": "<p>Get a prescription through your doctor or book an appointment with one of our doctors.</p>"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "heading3",
      "label": "Heading 3",
      "default": "Get prescription"
    },
    {
      "type": "richtext",
      "id": "text3",
      "label": "Text 3",
      "default": "<p>Get a prescription through your doctor or book an appointment with one of our doctors.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }    
  ],
  "presets": [
    {
      "name": "Icons"
    }
  ]
}   
