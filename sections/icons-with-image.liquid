
  {% comment %}
    Icons with image
  {% endcomment %}
  
  <div class="icons-with-image icon--{{ section.id }}">

      <div class="icons-with-image__text">

        <div class="icons-with-image__text__heading">
          <h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
        </div> 
        
        {%- if section.settings.heading1 != blank -%}
          <div class="icons-with-image__text__item">
            <div class="icons-with-image__text__item__icon">
              <img loading="lazy" src="{{ section.settings.image1 | image_url: width: 200 }}" 
                alt="{{ section.settings.image1.alt | escape }}" width="200" height="200">
            </div>
            <div class="icons-with-image__text__item__text">
              <h6 class="colour--green-light">{{ section.settings.heading1 | escape }}</h6>
              {{ section.settings.text1 }}
            </div>  
          </div>  
        {%- endif -%}

        {%- if section.settings.heading2 != blank -%}
          <div class="icons-with-image__text__item">
            <div class="icons-with-image__text__item__icon">
              <img loading="lazy" src="{{ section.settings.image2 | image_url: width: 200 }}" 
                alt="{{ section.settings.image2.alt | escape }}" width="200" height="200">
            </div>
            <div class="icons-with-image__text__item__text">
              <h6 class="colour--green-light">{{ section.settings.heading2 | escape }}</h6>
              {{ section.settings.text2 }}
            </div>  
          </div>  
        {%- endif -%}

        {%- if section.settings.heading3 != blank -%}
          <div class="icons-with-image__text__item">
            <div class="icons-with-image__text__item__icon">
              <img loading="lazy" src="{{ section.settings.image3 | image_url: width: 200 }}" 
                alt="{{ section.settings.image3.alt | escape }}" width="200" height="200">
            </div>
            <div class="icons-with-image__text__item__text">
              <h6 class="colour--green-light">{{ section.settings.heading3 | escape }}</h6>
              {{ section.settings.text3 }}
            </div>  
          </div>  
        {%- endif -%}

      </div>  


      <div class="icons-with-image__image">
        <img loading="lazy" src="{{ section.settings.image | image_url: width: 800 }}" 
          alt="{{ section.settings.image.alt | escape }}" width="800" height="800">
      </div>

  </div>
  

